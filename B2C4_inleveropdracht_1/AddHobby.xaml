<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B2C4_inleveropdracht_1.AddHobby" Title="Add a hobby">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="Center" Margin="10,10,10,10" x:Name="lblWelcome"  Text="Add a hobby here"></Label>

            <Entry  Margin="50,50,50,0" x:Name="hobbyName" HorizontalOptions="Center" HorizontalTextAlignment="Center" WidthRequest="250"  Placeholder="Hobby name"></Entry>

            <Button Margin="50,50,50,50" HorizontalOptions="Center" WidthRequest="350" TextColor="White" BackgroundColor="#2196F3" CornerRadius="50" x:Name="btnAddHobby" Text="Add your hobby" Clicked="btnAddHobby_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>