<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Home" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B2C4_inleveropdracht_1.MainPage">

    <StackLayout>
        <Image Source="placeholder.png" WidthRequest="150" Margin="20,20,20,20"></Image>

        <Label x:Name="titleLabel" Text="Welcome to Tip Sharing!" TextColor="Gray" HorizontalOptions="Center" FontSize="24" Margin="0,30,0,10" LineBreakMode="WordWrap" ></Label>

        <Label x:Name="welcomeMessageLabel" LineBreakMode="WordWrap" FontSize="16" Text="In this application you can share and gain knowledge about your hobbies and interests!" WidthRequest="350" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>

        <Button x:Name="beginButton" Text="Check hobbies" WidthRequest="150" HorizontalOptions="Center" BackgroundColor="#2196F3" TextColor="white" Margin="0,40,0,0" Clicked="beginButton_Clicked"></Button>

        <Label x:Name="titleLabel" Text="Under Construction" TextColor="Gray" HorizontalOptions="Center" FontSize="24" Margin="0,30,0,10" LineBreakMode="WordWrap" ></Label>
    </StackLayout>
</ContentPage>
