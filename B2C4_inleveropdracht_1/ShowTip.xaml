<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B2C4_inleveropdracht_1.ShowTip" Title="Tip">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Share" Clicked="ToolbarItem_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
   
    <StackLayout>
            <Label x:Name="titleHobby" Text="x" FontSize="30" HorizontalOptions="Center"></Label>
            <Label x:Name="titleTip" Text="x" FontSize="28" HorizontalOptions="Center"></Label>
            <Image x:Name="levelImage" Source="x"></Image>
            <Image x:Name ="uploadedImage" Source="x" HorizontalOptions="Center" HeightRequest="300" WidthRequest="300"></Image>
            <Label x:Name="tipInfo"  Text="x" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
            <Button x:Name="linkTip" Clicked="linkTip_Clicked" CornerRadius="50" TextColor="White" BackgroundColor="#2196F3" Text="Check Link" HorizontalOptions="Center"></Button>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>